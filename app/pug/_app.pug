- function slugify(text){ return text.toString().toLowerCase().replace('é','e').replace('ñ','n').replace('í','i').replace('ó', 'o').replace('á','a').replace(/\s+/g, '-').replace(/[^\w\-]+/g, '').replace(/\-\-+/g, '-').replace(/^-+/, '').replace(/-+$/, ''); }

